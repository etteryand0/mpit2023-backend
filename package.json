{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "dotenv -e .env.local -- ts-node src/index.ts",
    "dev": "dotenv -e .env.local -- nodemon src/index.ts",
    "build": "tsc",
    "serve": "dotenv -e .env.production -- node dist/index.js",
    "generate": "yarn generate:prisma && yarn generate:pal && yarn generate:nexus",
    "generate:prisma": "prisma generate",
    "generate:pal": "node generate.js",
    "generate:nexus": "yarn ts-node src/schema.ts",
    "db-dev": "dotenv -e .env.local -- prisma migrate dev",
    "db-deploy": "dotenv -e .env.production -- prisma migrate deploy",
    "ts-node": "ts-node --transpile-only --compiler-options {\\\"module\\\":\\\"CommonJS\\\",\\\"strict\\\":false}"
  },
  "dependencies": {
    "@apollo/server": "^4.4.1",
    "@paljs/generator": "^5.2.0",
    "@paljs/nexus": "^5.2.0",
    "@prisma/client": "^4.11.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "cookie": "^0.5.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.0",
    "graphql": "^16.6.0",
    "graphql-middleware": "^6.1.33",
    "graphql-shield": "^7.6.5",
    "graphql-subscriptions": "^2.0.0",
    "graphql-ws": "^5.12.0",
    "jsonwebtoken": "^9.0.0",
    "nanoid": "3.0.0",
    "nexus": "^1.3.0",
    "typed-graphql-subscriptions": "^0.0.1",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie": "^0.5.1",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.15.0",
    "dotenv-cli": "^7.1.0",
    "nodemon": "^2.0.21",
    "prisma": "^4.11.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
